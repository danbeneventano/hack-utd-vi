{
  "name": "client",
  "description": "A Vue.js web extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "48": "icons/icon_48.png",
    "128": "icons/icon_128.png"
  },
  "browser_action": {
    "default_title": "client",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches" : [
        "*://*/*"
      ],
      "js" : [
        "content.js"
      ],
      "css" : [
        "balloon.min.css"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs"
  ]
}
